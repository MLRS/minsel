{
  "format": "grid",
  "title": "Entry",
  "type": "object",
  "required" : [
    "lemma",
    "pos",
    "senses",
    "etymology"
  ],
  "properties": {
    "lemma": {
      "title": "Lemma",
      "type": "string"
    },
    "pos": {
      "title": "POS",
      "description": "Part of Speech",
      "type": "string",
      "enum": [
        "ADJ",
        "ADP",
        "ADV",
        "AUX",
        "CONJ",
        "DET",
        "INTJ",
        "NOUN",
        "NUM",
        "PART",
        "PRON",
        "PROPN",
        "PUNCT",
        "SCONJ",
        "SYM",
        "VERB",
        "X"
      ]
    },
    "gender": {
      "title": "Gender",
      "type": "string",
      "enum": [
        "m",
        "f"
      ]
    },
    "transitive": {
      "type": "boolean",
      "format": "checkbox"
    },
    "intransitive": {
      "type": "boolean",
      "format": "checkbox"
    },
    "senses": {
      "title": "Word senses",
      "type": "array",
      "format": "tabs",
      "items": {
        "title": "Sense",
        "type": "object",
        "properties": {
          "sense_id" : {
            "title": "Sense ID",
            "type": "integer",
            "min": 1
          },
          "description" : {
            "title": "Descriptions",
            "type": "array",
            "format": "table",
            "items": {
              "type": "string"
            }
          },
          "etymologies" : {
            "title": "Etymologies",
            "type": "array",
            "format": "table",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "etymology": {
      "title": "Etymological information",
      "type": "array",
      "format": "table",
      "items": {
        "format": "grid",
        "type": "object",
        "properties": {
          "language" : {
            "type": "string"
          },
          "word" : {
            "type": "string"
          },
          "reference" : {
            "type": "string"
          }
        }
      }
    }
  }
}
