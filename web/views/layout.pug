doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible",content="IE=edge")
    meta(name="viewport",content="width=device-width, initial-scale=1")

    title Minsel

    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css')
    style.
      .affix { top: 8px; right: 10px; z-index: 10000; }
      .footer {
        padding-top: 20px;
        padding-bottom: 20px;
        background-color: #f5f5f5;
        text-align: right;
      }
      [data-toggle] {
        border-bottom: 1px dotted #ccc;
      }
      .senses .language {
        color: #777;
      }
      .etymology .reference {
        color: #777;
      }
      .etymology .language {
        font-weight: bold;
      }

    script(src='//code.jquery.com/jquery-2.1.4.min.js')
    script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js',defer)
    script(src=baseURL+'/module/json-editor/dist/jsoneditor.min.js')
    script(src=baseURL+'/javascripts/typeahead.bundle.min.js')
    - if (analyticsCode)
      script.
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
        ga('create', '#{analyticsCode}', 'auto');
        ga('send', 'pageview');
    script.
      $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip()
      })

  body(role="document",style="margin-top:4em")
    nav.navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar-collapse', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href=baseURL+"/",style="color:firebrick") Minsel
        form(role="search",action=baseURL+"/",method="GET").navbar-form.navbar-right
          div.input-group
            - var search_term = (query) ? query.s : ''
            input(type="search",name="s",autofocus="true",placeholder="Search",value=search_term).form-control
            div.input-group-btn
              button(type="submit").btn.btn-primary
                span.glyphicon.glyphicon-search
        .navbar-collapse.collapse#navbar-collapse
          ul.nav.navbar-nav
            li
              a(href=baseURL+"/") List entries
            li
              a(href=baseURL+"/add") New entry
            li
              a(href=baseURL+"/references") References
            - if (!user)
              li
                a(href=baseURL+"/login") Login
          - if (user)
            p.navbar-text
              | Logged in as #{user.username} &middot; 
              a(href=baseURL+"/logout").navbar-link Logout
            
    .container
      block content
